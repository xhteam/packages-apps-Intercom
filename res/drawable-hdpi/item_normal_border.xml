<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false"><shape android:shape="rectangle">
            <solid android:color="#ffff00ff" />
            <stroke android:width="2dp" android:color="#4fa5d5" />
            <corners android:radius="8dp" />
            <padding 
                android:bottom="7dp"
                android:left="7dp"
                android:right="7dp"
                android:top="7dp"
                />
        </shape></item>
    <item android:state_pressed="true"><shape android:shape="rectangle">
            <solid android:color="@color/yellow" />
            <stroke android:width="3dp" android:color="#4fa5d5" />
            <corners android:radius="8dp" />
            <padding 
                android:bottom="7dp"
                android:left="7dp"
                android:right="7dp"
                android:top="7dp"
                />
        </shape></item>

</selector>